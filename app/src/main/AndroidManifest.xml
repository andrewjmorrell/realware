<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        package="com.pivot.pivot360.pivotglass">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.RECORD_AUDIO"></uses-permission>

    <application
            android:name="com.pivot.pivot360.pivoteye.PivotApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:networkSecurityConfig="@xml/network_security_config"
            android:theme="@style/AppTheme"
            tools:replace="android:allowBackup">
        <activity android:name="com.pivot.pivot360.pivoteye.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="com.pivot.pivot360.videoconference" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.pivot.pivot360.pivoteye.EventsActivity"/>
        <activity android:name="com.pivot.pivot360.pivoteye.MainActivity"/>
        <activity android:name="com.pivot.pivot360.pivoteye.MenuActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.MeetActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.ChatActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.EventAttachmentActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.WebActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.CameraActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.DocumentActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.MovieActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.AudioCaptureActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.BarcodeActivity" />
        <activity android:name="com.pivot.pivot360.pivoteye.VideoRecorderActivity" />
    </application>

</manifest>